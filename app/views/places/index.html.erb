<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
	<!-- Indicators 
	=========================================================== -->
	<ol class="carousel-indicators">
		<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li><!-- /.active -->
		<li data-target="#carousel-example-generic" data-slide-to="1" class="active"></li><!-- /.active -->
	</ol><!-- /.carousel-indicators -->

	<!-- Wrapper for slides 
	=========================================================== -->
	<div class="carousel-inner">
		<div class="item active">
			<%= image_tag 'slider1.jpg', class: 'img-responsive' %>
			<div class="carousel-caption">
				test caption for carousel image 1
			</div><!-- /.carousel-caption -->
		</div><!-- /.item active -->
		<div class="item">
			<%= image_tag 'slider2.jpg', class: 'img-responsive' %>
			<div class="carousel-caption">
				test caption for carousel image 2
			</div><!-- /.carousel-caption -->
		</div><!-- /.item -->
	</div><!-- /.carousel-inner -->

	<!-- Controls 
	=========================================================== -->
	<a href="#carousel-example-generic" class="left carousel-control" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
	</a>
	<a href="#carousel-example-generic" class="right carousel-control" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
	</a>
</div><!-- /#carousel-example-generic.carousel slide -->

<div class="col-xs-10 col-xs-offset-1">
	<%= page_entries_info %><br>
	<%= will_paginate %>
</div><!-- /.col-xs-10 col-xs-offset-1 -->

<% @places.each do |place| %>
<div class="booyah-box col-xs-10 col-xs-offset-1">
	<% if place.photos.present? %>
	<div class="col-xs-12 col-sm-7">
	<% else %>
	<div class="col-xs-12">
	<% end %>
		<h1><%= link_to place.name, place_path(place) %></h1>
		<p id="address"><%= place.address %></p><br><br>
		<p><%= place.description %></p><br>

	<% if place.user.present? %>
		<small><%= place.user.email %></small><br><br>
	<% end %>
	</div><!-- /.col-xs-8 -->

	<% if place.photos.present? %>
	<div class="col-xs-12 col-sm-5">
		<%= link_to place_path(place) do %>
			<%= image_tag place.photos.first.picture, class: 'photo img-responsive' %>
		<% end %>
	</div><!-- /.col-xs-4 pull-right -->
	<% end %>

	<% if place.comments.present? %>
	<div class="col-xs-12">
		<blockquote>
			<% if place.comments.first.humanized_rating.present? %>
			<strong><%= place.comments.first.humanized_rating %></strong> -
			<% end %>
			<%= place.comments.first.message %>
			<small><%= place.comments.first.user.email %></small>
		</blockquote>
	</div>
	<% end %>
</div>
<% end %>

<div class="col-xs-10 col-xs-offset-1">
	<%= will_paginate %>
</div><!-- /.col-xs-10 col-xs-offset-1 -->