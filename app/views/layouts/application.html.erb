<!DOCTYPE html>
<html>
	<head>
	  <title>Nomster</title>
	  <meta name="viewport" content="width=device-width, initial-scale=1">
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>

	<body>

		<nav class="navbar navbar-inverse" role="navigation">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" class="navbar-toggle">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<%= link_to 'Nomster', root_path, class: 'navbar-brand' %>
				</div><!-- /.navbar-header -->

				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li>
							<%= link_to new_place_path do %>
								<i class="glyphicon glyphicon-plus-sign"></i>
								New Place
							<% end %>
						</li>
					</ul><!-- /.nav navbar-nav -->

					<ul class="nav navbar-nav navbar-right">
						<% if user_signed_in? %>
						<li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
						<% else %>
						<li><%= link_to 'Sign In', new_user_session_path %></li>
						<li><%= link_to 'Sign Up', new_user_registration_path %></li>
						<% end %>
					</ul><!-- /.nav navbar-nav navbar-right -->
				</div><!-- /#bs-example-navbar-collapse-1.collapse navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav><!-- /.navbar navbar-default -->

		<% if notice.present? %>
		<p class="alert alert-info"><%= notice %></p><!-- /.notice -->
		<% elsif alert.present? %>
		<p class="alert alert-danger"><%= alert %></p><!-- /.alert -->
		<% end %>

		<div class="container">
			<%= yield %>
		</div><!-- /.container -->

	</body>
</html>
